# Database Configuration
DB_HOST=db
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress

# WordPress Configuration
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# Plugin Configuration
DPO_MIN_MARGIN=0.1
DPO_MAX_MARGIN=0.3
DPO_MAX_PRICE_CHANGE=0.2
DPO_COMPETITOR_WEIGHT=0.4
DPO_DEMAND_WEIGHT=0.3
DPO_COST_WEIGHT=0.3
DPO_UPDATE_INTERVAL=3600
DPO_MIN_PRICE=0
DPO_MAX_PRICE=1000

# API Keys
DPO_COMPETITOR_API_KEY=your_competitor_api_key
DPO_DEMAND_API_KEY=your_demand_api_key

# Cache Configuration
DPO_CACHE_DURATION=3600
DPO_CACHE_ENABLED=true

# Logging Configuration
DPO_LOG_LEVEL=debug
DPO_LOG_FILE=/var/log/dpo.log

# Development Tools
XDEBUG_MODE=debug
XDEBUG_CONFIG=client_host=host.docker.internal 