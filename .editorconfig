# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript files
[*.js]
indent_style = space
indent_size = 4
max_line_length = 100

# SCSS files
[*.scss]
indent_style = space
indent_size = 4
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Composer files
[composer.json]
indent_style = space
indent_size = 4
max_line_length = 100

# Package files
[package.json]
indent_style = space
indent_size = 2
max_line_length = 100 